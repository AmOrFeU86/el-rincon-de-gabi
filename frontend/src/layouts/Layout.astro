---
import Chat from '../components/Chat.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="El Rincón de Gabi - Aprende sobre agentes de IA" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | El Rincón de Gabi</title>
  </head>
  <body class="min-h-screen text-gray-100 relative">
    <!-- Fondo con gradiente dinámico -->
    <div id="animated-bg" class="fixed inset-0 -z-10 transition-colors duration-700 ease-out"></div>

    <slot />
    <Chat />

    <script>
      // Efecto de gradiente según scroll
      function updateBackground() {
        const scrollPercent = window.scrollY / (document.documentElement.scrollHeight - window.innerHeight);
        const bg = document.getElementById('animated-bg');

        if (bg) {
          // Interpolación entre colores según el scroll
          // De un gris-azul oscuro a un morado-azul oscuro
          const hue1 = 220; // Azul
          const hue2 = 260; // Morado-azul
          const hue = hue1 + (hue2 - hue1) * scrollPercent;

          const sat1 = 15;
          const sat2 = 25;
          const sat = sat1 + (sat2 - sat1) * scrollPercent;

          const light1 = 8;
          const light2 = 12;
          const light = light1 + (light2 - light1) * scrollPercent;

          bg.style.background = `linear-gradient(180deg,
            hsl(${hue}, ${sat}%, ${light}%) 0%,
            hsl(${hue + 10}, ${sat + 5}%, ${light + 3}%) 100%)`;
        }
      }

      // Llamar al cargar la página
      updateBackground();

      // Throttle para mejor rendimiento
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            updateBackground();
            ticking = false;
          });
          ticking = true;
        }
      });
    </script>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  body {
    font-family: 'Inter', sans-serif;
  }
</style>
