---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const API_URL = 'http://localhost:8000';

let temas = [];
try {
  const response = await fetch(`${API_URL}/temas`);
  temas = await response.json();
} catch (e) {
  console.error('Error cargando temas:', e);
}
---

<Layout title="Inicio">
  <div class="flex flex-col min-h-screen">
    <Header />

    <main class="flex-1">
      <!-- Hero -->
      <section class="relative overflow-hidden py-24">
        <!-- Grid pattern background -->
        <div class="absolute inset-0 opacity-[0.15]">
          <div class="absolute inset-0" style="background-image: linear-gradient(rgba(96, 165, 250, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(96, 165, 250, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
        </div>

        <!-- Background decoration -->
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-500/20 rounded-full blur-3xl"></div>
          <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent-500/20 rounded-full blur-3xl"></div>
        </div>

        <div class="relative max-w-6xl mx-auto px-4 text-center">
          <div class="inline-flex items-center gap-2 bg-gray-800/50 border border-gray-700 rounded-full px-4 py-2 mb-6">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
            </span>
            <span class="text-sm text-gray-300">Nuevo contenido cada semana</span>
          </div>

          <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
            Aprende sobre
            <span class="underline-animate text-transparent bg-clip-text bg-gradient-to-r from-primary-400 via-primary-300 to-accent-500">
              Agentes de IA
            </span>
          </h1>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto mb-10">
            Complementa los videos del canal con ejercicios interactivos
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a
              href="#temas"
              class="group bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-500 hover:to-primary-400 text-white font-semibold px-8 py-4 rounded-xl transition-all shadow-lg shadow-primary-500/25 hover:shadow-primary-500/40 flex items-center gap-2"
            >
              Explorar temas
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a
              href="https://youtube.com/@amorfeu86"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-gray-800 hover:bg-gray-700 text-white font-semibold px-8 py-4 rounded-xl transition-all border border-gray-700 hover:border-gray-600 flex items-center gap-2"
            >
              <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
              Canal de YouTube
            </a>
          </div>
        </div>
      </section>

      <!-- Wave divisor -->
      <div class="relative -mt-1">
        <svg class="w-full h-16 text-gray-900/50" viewBox="0 0 1200 120" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0,0 C300,60 900,60 1200,0 L1200,120 L0,120 Z" fill="currentColor" opacity="0.3"/>
          <path d="M0,20 C300,80 900,80 1200,20 L1200,120 L0,120 Z" fill="currentColor" opacity="0.2"/>
        </svg>
      </div>

      <!-- Temas -->
      <section id="temas" class="py-20">
        <div class="max-w-6xl mx-auto px-4">
          <div class="flex items-center gap-4 mb-10">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-accent-500 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <div>
              <h2 class="text-3xl font-bold">Temas disponibles</h2>
              <p class="text-gray-400">Explora videos y ejercicios por tema</p>
            </div>
          </div>

          {temas.length === 0 ? (
            <div class="bg-gray-800/50 backdrop-blur rounded-2xl p-12 text-center border border-gray-700">
              <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
              </div>
              <p class="text-gray-300 text-lg">No hay temas disponibles todavía.</p>
              <p class="text-gray-500 mt-2">Vuelve pronto para ver nuevo contenido.</p>
            </div>
          ) : (
            <div class="grid-temas gap-6">
              {temas.map((tema, index) => {
                // Determinar si tiene contenido completo (3+ ejercicios)
                const isRichContent = tema.total_ejercicios >= 3;

                return (
                  <a
                    href={`/temas/${tema.slug}`}
                    class="card-tema group relative bg-gray-800/30 backdrop-blur rounded-2xl p-8 transition-all duration-300 overflow-hidden"
                  >
                    {/* Badge de contenido destacado */}
                    {isRichContent && (
                      <div class="absolute top-4 left-4 z-10">
                        <div class="flex items-center gap-1.5 bg-gradient-to-r from-primary-600 to-primary-500 text-white text-xs font-semibold px-3 py-1 rounded-full shadow-lg shadow-primary-500/30">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                          Destacado
                        </div>
                      </div>
                    )}

                    {/* Borde gradient animado */}
                    <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="background: linear-gradient(135deg, rgba(96, 165, 250, 0.3), rgba(147, 197, 253, 0.2), rgba(251, 146, 60, 0.3)); padding: 1px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>

                    {/* Icono ilustrativo */}
                    <div class="absolute top-6 right-6 w-16 h-16 bg-gradient-to-br from-primary-500/20 to-accent-500/20 rounded-xl flex items-center justify-center opacity-50 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300">
                      <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        {index % 3 === 0 ? (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                        ) : index % 3 === 1 ? (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        ) : (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                        )}
                      </svg>
                    </div>

                    <div class="mb-4 relative mt-12">
                      <h3 class="text-2xl font-bold mb-3 group-hover:text-primary-400 transition-colors pr-20">
                        {tema.titulo}
                      </h3>
                      <p class="text-gray-300 leading-relaxed pr-24">
                        {tema.descripcion}
                      </p>
                    </div>

                    <div class="flex items-center gap-6 text-sm text-gray-400 mt-6 pt-6 border-t border-gray-700/50">
                      <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                        </svg>
                        <span>{tema.total_videos} video{tema.total_videos !== 1 ? 's' : ''}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <span>{tema.total_ejercicios} ejercicio{tema.total_ejercicios !== 1 ? 's' : ''}</span>
                      </div>
                    </div>
                  </a>
                );
              })}
            </div>
          )}
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout>

<style>
  .underline-animate {
    position: relative;
    display: inline-block;
    cursor: default;
    overflow: visible;
    padding-bottom: 4px;
  }

  .underline-animate::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(to right, rgb(96 165 250), rgb(147 197 253), rgb(251 146 60));
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.5s ease-in-out;
  }

  .underline-animate:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Grid que centra la última tarjeta si es impar */
  .grid-temas {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 450px), 1fr));
  }

  @media (min-width: 768px) {
    .grid-temas {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Si hay número impar, centrar la última */
  .grid-temas:has(> :last-child:nth-child(odd)) > :last-child {
    grid-column: 1 / -1;
    max-width: calc(50% - 0.75rem);
    margin: 0 auto;
  }

  @media (max-width: 767px) {
    .grid-temas:has(> :last-child:nth-child(odd)) > :last-child {
      max-width: 100%;
    }
  }

  /* Tarjetas con efecto hover mejorado */
  .card-tema {
    border: 1px solid rgba(75, 85, 99, 0.5);
  }

  .card-tema:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(96, 165, 250, 0.1);
    border-color: rgba(96, 165, 250, 0.3);
  }
</style>
