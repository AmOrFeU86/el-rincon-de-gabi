---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import VideoPlayer from '../../components/VideoPlayer.astro';
import Quiz from '../../components/Quiz.astro';
import CodeExercise from '../../components/CodeExercise.astro';
import WrittenExercise from '../../components/WrittenExercise.astro';

export async function getStaticPaths() {
  const API_URL = 'http://localhost:8000';
  try {
    const response = await fetch(`${API_URL}/temas`);
    const temas = await response.json();
    return temas.map(t => ({ params: { slug: t.slug } }));
  } catch (e) {
    console.error('Error fetching temas:', e);
    return [];
  }
}

const { slug } = Astro.params;
const API_URL = 'http://localhost:8000';

let tema = null;
try {
  const response = await fetch(`${API_URL}/temas/${slug}`);
  if (response.ok) {
    tema = await response.json();
  }
} catch (e) {
  console.error('Error fetching tema:', e);
}

if (!tema) {
  return Astro.redirect('/');
}
---

<Layout title={tema.titulo}>
  <Header />

  <main class="max-w-6xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <div class="flex items-center gap-2 text-sm">
        <a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">
          Inicio
        </a>
        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-300">{tema.titulo}</span>
      </div>
    </nav>

    <!-- Header del tema -->
    <div class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
        {tema.titulo}
      </h1>
      <p class="text-gray-400 text-lg leading-relaxed max-w-3xl">
        {tema.descripcion}
      </p>
    </div>

    <!-- Videos -->
    {tema.videos && tema.videos.length > 0 && (
      <section class="mb-16">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-gradient-to-br from-red-500 to-red-600 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </div>
          <h2 class="text-2xl md:text-3xl font-bold">Videos del tema</h2>
        </div>
        <div class="grid md:grid-cols-2 gap-6">
          {tema.videos.map(video => (
            <div class="bg-gray-800/50 backdrop-blur rounded-2xl p-6 border border-gray-700/50">
              <VideoPlayer videoId={video.youtube_id} />
              {video.titulo && (
                <h3 class="text-lg font-semibold mt-4 text-gray-200">{video.titulo}</h3>
              )}
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Ejercicios -->
    {tema.ejercicios && tema.ejercicios.length > 0 && (
      <section>
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-primary-600 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h2 class="text-2xl md:text-3xl font-bold">Ejercicios</h2>
        </div>
        <div class="space-y-8">
          {tema.ejercicios.map((ej) => (
            <div class="bg-gray-800/50 backdrop-blur rounded-2xl p-8 border border-gray-700/50">
              <div class="mb-6">
                <h3 class="text-xl md:text-2xl font-semibold mb-2">{ej.titulo}</h3>
                <div class="inline-block bg-gray-700/50 text-gray-300 text-sm px-3 py-1 rounded-full border border-gray-600/50">
                  {ej.tipo === 'quiz' && 'Test'}
                  {ej.tipo === 'codigo' && 'Código'}
                  {ej.tipo === 'escrito' && 'Escrito'}
                </div>
              </div>

              {ej.tipo === 'quiz' && (
                <Quiz ejercicioId={ej.id} preguntas={ej.preguntas} />
              )}

              {ej.tipo === 'codigo' && (
                <CodeExercise ejercicioId={ej.id} preguntas={ej.preguntas} />
              )}

              {ej.tipo === 'escrito' && (
                <WrittenExercise ejercicioId={ej.id} preguntas={ej.preguntas} />
              )}
            </div>
          ))}
        </div>
      </section>
    )}

    {(!tema.ejercicios || tema.ejercicios.length === 0) && (!tema.videos || tema.videos.length === 0) && (
      <div class="bg-gray-800/50 backdrop-blur rounded-2xl p-16 text-center border border-gray-700">
        <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
        </div>
        <p class="text-gray-300 text-lg font-medium mb-2">Contenido próximamente</p>
        <p class="text-gray-500">Este tema está en preparación. Vuelve pronto para ver videos y ejercicios.</p>
      </div>
    )}

    <!-- Botón volver -->
    <div class="mt-12 pt-8 border-t border-gray-700/50">
      <a
        href="/"
        class="inline-flex items-center gap-2 text-primary-400 hover:text-primary-300 transition-colors font-medium"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Volver a temas
      </a>
    </div>
  </main>

  <Footer />
</Layout>
